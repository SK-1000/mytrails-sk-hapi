<div class="box has-text-centered columns m-2">
  <div class="column">
    <i style="font-size: 48px; color: rgb(49, 182, 93);" class="fas fa-shoe-prints"></i>
  </div>
  <div class="column">
    <div class="title is-5"> {{title}} </div>
    <div class="subtitle is-5"> {{subTitle}} </div>
  </div>
  <div class="column">
    <i class="fas fa-plus fa-3x" style="color:rgb(95, 96, 173)" title="Source repo" pos="bottom" uk-tooltip></i>
    {{#if user}}
      <div class="is-size-7">{{user.firstName}} {{user.lastName}}</div>
    {{else}}
      <div class="is-size-7">myTrails-Hapi 0.1</div>
    {{/if}}
  </div>
</div>
